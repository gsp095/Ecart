@model MachineTestNimap_Amol.Models.CategoryViewModel
@{
    ViewBag.Title = "Category";
}

<div class="page-header">
    <h1>
        Category
    </h1>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("AddUpdateCategory", "Category", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.HiddenFor(model => model.CategoryId)
            <div class="form-group">
                @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                </div>
               
            </div>
           
            <div class="form-group">
                <div class="col-md-offset-2 col-md-4">
                    <input type="submit" id="btnSubmit" value="Submit" class="btn btn-default" />
                    <input type='reset' id='resetform' class="btn btn-warning" value='Reset' />
                </div>
            </div>
        }
    </div>
</div>


